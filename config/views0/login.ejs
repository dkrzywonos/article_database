<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <%- include('./partials/head'); %>
</head>

<body>
  <header>
    <%- include('./partials/header'); %>
  </header>
  <main>
    <section id="login">
      <div class="row">
        <div class="col-lg-6 login-register">
          <div class="contentTitle">
            <h1>Logowanie</h1>
          </div>
          <form action="/login" method="post">
            <div class="form-group">
              <label for="emailLogin">Adres email</label>
              <input name="emailLogin" type="email" class="form-control" id="emailLogin" aria-describedby="emailHelp" placeholder="Wpisz adres email">
            </div>
            <div class="form-group">
              <label for="passwordLogin">Hasło</label>
              <input name="passwordLogin" type="password" class="form-control" id="passwordLogin" placeholder="Hasło">
            </div>
            <div class="form-group form-check">
              <input type="checkbox" class="form-check-input" id="checkLogin">
              <label class="form-check-label" for="checkLogin">Zapamiętaj mnie</label>
            </div>
            <button type="submit" class="btn btn-dark">Zaloguj się</button>
             <div style="color:<%= colorLogin %>"><%= statusLogin %></div>

          </form>
        </div>
        <div class="col-lg-6 login-register">
          <div class="contentTitle">
            <h1>Rejestracja</h1>
          </div>
          <form action="/register" method="post">
            <div class="form-group">
              <label for="firstName">Imię</label>
              <input name="firstName" type="text" class="form-control" id="firstName" placeholder="Wpisz swoje imię">
            </div>
            <div class="form-group">
              <label for="lastName">Nazwisko</label>
              <input name="lastName" type="text" class="form-control" id="lastName" placeholder="Wpisz swoje nazwisko">
            </div>
            <div class="form-group">
              <label for="email">Adres email</label>
              <input name="email" type="email" class="form-control" id="email" placeholder="Wpisz adres email">
            </div>
            <div class="form-group">
              <label for="password">Hasło</label>
              <input name="password" type="password" class="form-control" id="password" placeholder="Hasło">
            </div>
            <button type="submit" class="btn btn-dark">Zarejestruj się</button>
          </form>
        </div>
      </div>

    </section>



    <%- include('./partials/scripts'); %>
  </main>
  <footer>
    <%- include('./partials/footer'); %>
  </footer>
</body>

</html>
